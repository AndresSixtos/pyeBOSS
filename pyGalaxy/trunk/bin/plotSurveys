	plotRaDecEBV(survey.catalog['ALPHA'][sel[i]], survey.catalog['DELTA'][sel[i]], survey.catalog['EBV_MW'][sel[i]] , "vipers-f"+str(i)+"-ra-dec.png", plotDir)

