#! /usr/bin/env python

"""
This script computes the line luminosities from of the VIPERS survey
"""
# line list to be converted to luminosities
from os.path import join
import astropy.cosmology as co
cosmo=co.Planck15 #co.FlatLambdaCDM(H0=70,Om0=0.3)

from lineListAir import *
lineList = n.array([[O2,O2_mean,"O2_3728"],[Ne3,Ne3_3869,"Ne3_3869"], [O3,O3_4363,"O3_4363"], [O3,O3_4960,"O3_4960"], [O3,O3_5007,"O3_5007"], [N2,N2_6549,"N2_6549"], [N2,N2_6585,"N2_6585"], [S2,S2_6718,"S2_6718"], [S2,S2_6732,"S2_6732"],  [Ar3,Ar3_7137,"Ar3_7137"],[H1,H1_1216,"H1_1216"], [H1,H1_3970,"H1_3970"], [H1,H1_4102,"H1_4102"], [H1,H1_4341,"H1_4341"], [H1,H1_4862,"H1_4862"], [H1,H1_6564,"H1_6564"]])

from GalaxySurveyVIPERS import *

# VIPERS catalog
survey = GalaxySurveyVIPERS(redshift_catalog="VIPERS_W14_summary_v1.1.linesFitted.fits")
survey.path_to_output_catalog  =  join(survey.vipers_catalog_dir, "VIPERS_W14_summary_v1.1.LFcatalog.Planck15.fits")
survey.Ngalaxies=len(survey.catalog)
new_columns = survey.catalog.columns

dL=cosmo.luminosity_distance(survey.catalog['zspec'])
sphere=4*n.pi*(dL)**2.
sphereCM=sphere.to(u.cm**2)

for line in lineList :
	print line[2]
	c0,c1 = survey.computeLineLuminosity(line,sphereCM)
	new_columns += c0 
	new_columns += c1

hdu = fits.BinTableHDU.from_columns(new_columns)
hdu.writeto(survey.path_to_output_catalog)
