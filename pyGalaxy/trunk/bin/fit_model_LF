p.ylabel(r'$\Phi$ [Mpc$^{-3}/$dlog L]')
p.yscale('log')
p.xscale('log')
p.xlim((1e39,1e44))
p.ylim((1e-6,1e-1))
p.text(2e42,2e-2,"z=1.2")

p.grid()
gl = p.legend(loc=3,fontsize=10)
gl.set_frame_on(False)
p.savefig(join(data_dir, "Products_Galaxies", "emissionLineLuminosityFunctions", "O2_3728", fileName+".pdf"))
p.clf()

